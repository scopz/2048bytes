<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_marginVertical="32dp"
    android:layout_marginHorizontal="16dp"

    tools:context=".ui.GridActivity"
    android:orientation="vertical" >

    <org.oar.bytes.ui.common.components.levelpanel.LevelPanelView
        android:id="@+id/levelPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <org.oar.bytes.ui.common.components.idlepanel.IdlePanelView
        android:id="@+id/idle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <org.oar.bytes.ui.common.components.idlepanel.NavPanelView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

</LinearLayout>