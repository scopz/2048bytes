<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginVertical="32dp"
    android:layout_marginHorizontal="16dp"
    tools:context=".ui.GridActivity"
    android:orientation="vertical" >

    <org.oar.bytes.ui.common.components.levelpanel.LevelPanelView
        android:id="@+id/levelPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <org.oar.bytes.ui.common.pager.FragmentPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <org.oar.bytes.ui.fragments.MainGridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <org.oar.bytes.ui.fragments.MainSettingsView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </org.oar.bytes.ui.common.pager.FragmentPager>

</LinearLayout>